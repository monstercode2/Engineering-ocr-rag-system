# RAGFlow API配置
# 从RAGFlow获取API密钥后填入，格式通常为：ragflow-xxxxxxxxxxxxxxxxxxxx
RAGFLOW_API_KEY=ragflow-your_api_key_here_32_chars_long
RAGFLOW_BASE_URL=http://localhost:9380

# InterVL API配置
INTERVL_API_URL=http://localhost:8000

# Flask应用配置
# 生产环境请使用强密钥，推荐32字符以上随机字符串
FLASK_SECRET_KEY=your_random_32_char_secret_key_here
FLASK_DEBUG=False

# 文件上传配置
MAX_CONTENT_LENGTH=500  # MB
UPLOAD_FOLDER=./data/uploads

# 模型配置
MODEL_PATH=./models/internvl3-8b
GPU_DEVICE=0

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/system.log

# 数据库配置 (如需要)
# DATABASE_URL=sqlite:///./data/database.db

# 其他配置
TIMEZONE=Asia/Shanghai 